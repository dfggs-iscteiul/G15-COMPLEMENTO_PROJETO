private static void createTable_regioes(int size) throws FileNotFoundException {
		
		int i = 0;
		int j = 0;
        PrintWriter pw = new PrintWriter (new File ("../../wp-content/html/req5.html"));

		pw.print("<html>" +
			       "<body>" +
			       "<table border ='1'>" +
			       "<tr>" +
			       "<td>Region</td>" +
			       "<td>Infections</td>" +
			       "<td>Hospitalizations</td>" +
			       "<td>Tests</td>" +
				"</tr>");
		
		while (i<size) {
			j=0;
			pw.print("<tr>");
			while(j<3) {
				pw.print("<td>");
				pw.print(table_regioes[i][j]);
				pw.print("</td>");
				j++;
			}
			pw.print("</tr>");
			i++;
		}
		
		pw.print("</table>" +
				"</body>" +
				"</html>"); 

		pw.close(); 
	}   
}
